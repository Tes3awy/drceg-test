{{!-- Register form --}}
<form class="form-access form-register" method="POST">
  <div class="text-center">
    {{!-- <img class="mb-2" src="/favicon.ico" alt="Logo" title="Logo"> --}}
    <h1 class="h2 font-weight-normal">Please Register</h1>
    <p class="small text-danger text-center">All fields are required</p>
  </div>
  {{!-- Error Handling --}}
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span>{{this.msg}}</span>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    {{/each}}
  {{/if}}
  {{#if captcha}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <span>{{captcha}}</span>
      <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
      </button>
    </div>
  {{/if}}
  <div class="form-row">
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="First name" name="firstname" value="{{req.body.firstname}}" autofocus required>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Last name" name="lastname" value="{{req.body.lastname}}" required>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <input type="email" class="form-control email-input-class" placeholder="Email address" name="email" value="{{req.body.email}}" required>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" name="username" required value="{{req.body.username}}">
        <small class="text-info">Choose it wisely. You'll not be able to change ever again.</small>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <div class="input-group">
          <input type="password" class="form-control" placeholder="Password" name="password" required>
          <div class="input-group-append">
            <span class="input-group-text">
              <i class="fas fa-eye-slash"></i>
            </span>
          </div>
        </div>
        <small class="text-muted">Must be at least 6 characters</small>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="form-group">
        <div class="input-group">
          <input type="password" class="form-control" placeholder="Confirm Password" name="confPassword" required>
          <div class="input-group-append">
            <span class="input-group-text">
              <i class="fas fa-eye-slash"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="agreeTerms" name="agree" required>
    <label class="form-check-label text-muted" for="agreeTerms"> I accept the <a class="text-primary" href="/terms"
        target="_blank">Terms
        &amp; Conditions agreement</a></label>
  </div>
  <div class="form-group">
    <div class="g-recaptcha" data-size="normal" data-callback="verify_recaptcha" data-sitekey="6Lf4wmwUAAAAACYVuIsbRzJUhc8CjzHeWJ0M56zc"></div>
    <script>
      function verify_recaptcha() {
        $('#registerBtn').prop("disabled", false);
        $('#registerBtn').css('cursor', 'default');
      }
    </script>
  </div>
  <div class="text-center">
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="registerBtn" disabled>Register</button>
  </div>
  <p class="mt-4 mb-0 text-muted text-center">&copy; 2011 - {{getCurrentYear}} - Copyright Tes official website - All
    rights
    reserved.
  </p>
</form>
