<form class="form-access form-register" method="POST">
  <div class="text-center">
    <img class="mb-2" src="/favicon.ico" alt="Logo" title="Logo">
    <h1 class="h3 mb-4 text-white font-weight-normal">Please Register</h1>
  </div>
  {{#if error}}
    {{#each error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span>{{msg}}</span>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    {{/each}}
  {{/if}}
  <div class="form-group">
    <input type="text" class="form-control" placeholder="First Name & Last Name" name="name" autofocus>
  </div>
  <div class="form-group">
    <input type="email" class="form-control email-input-class" placeholder="Email address" name="email">
    <small class="text-muted">We'll never share your email with anyone</small>
  </div>
  <div class="form-group">
    <div class="input-group">
      <input type="password" class="form-control" placeholder="Password" name="password">
      <div class="input-group-append">
        <span class="input-group-text">
          <i class="fas fa-eye-slash"></i>
        </span>
      </div>
    </div>
    <small class="text-muted">Must be at least 6 characters</small>
  </div>
  <div class="form-group">
    <div class="input-group">
      <input type="password" class="form-control" placeholder="Confirm Password" name="confPassword">
      <div class="input-group-append">
        <span class="input-group-text">
          <i class="fas fa-eye-slash"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="text-center">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
  </div>
  <p class="mt-5 mb-0 text-muted text-center">&copy; 2011 - {{getCurrentYear}} - Copyright Tes official website - All rights reserved./p>
</form>
