<h2>Reset password</h2>

<div class="row">
  <div class="col-sm-4 mx-auto">
    {{!-- Error Handling --}}
    {{#if error}}
      {{#each error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <span>{{msg}}</span>
          <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
          </button>
        </div>
      {{/each}}
    {{/if}}
    <div class="card shadow">
      <div class="card-body">
        <h2 class="text-dark">Reset your password</h2>
        <p class="text-muted small">Please make sure you saved your new password in a safe place before resetting.</p>
        {{!-- Reset password form --}}
        <form action="/auth/reset/{{ciphertext}}?_method=PUT" method="POST" role="form">
          <div class="form-group">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" value="{{email}}" name="email">
            <div class="bg-dark p-2 text-white text-center">
              <i class="fas fa-envelope pr-2"></i> <span>{{email}}</span>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <input class="form-control shadow" type="password" name="newPassword" placeholder="New password">
              <div class="input-group-append">
                <span class="input-group-text">
                  <i class="fas fa-eye-slash"></i>
                </span>
              </div>
            </div>
            <small class="text-muted">Must be at least 6 characters</small>
          </div>
          <div class="form-group">
            <div class="input-group">
              <input class="form-control shadow" type="password" name="confPassword" placeholder="Confirm new password">
              <div class="input-group-append">
                <span class="input-group-text">
                  <i class="fas fa-eye-slash"></i>
                </span>
              </div>
            </div>
          </div>
          <div class="text-right">
            <button class="btn btn-warning"><i class="fas fa-unlock pr-2"></i> Reset password</button>
          </div>
        </form>
      </div>
    </div>
    <div class="text-right my-3">
      <a href="/auth/login"><i class="fas fa-arrow-left pr-2"></i> Back to login</a>
    </div>
  </div>
</div>
