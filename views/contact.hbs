<h1 class="mb-3">Contact us</h1>
<div class="row">
  <div class="col-md-6 contact-col mx-auto">
    {{!-- Success Messages --}}
    {{#if success}}
      <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <span><i class="far fa-thumbs-up"></i> {{success}}</span>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    {{/if}}
    {{!-- Error Handling --}}
    {{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <span>{{this.msg}}</span>
          <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
          </button>
        </div>
      {{/each}}
    {{/if}}
    {{#if captcha}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span>{{captcha}}</span>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    {{/if}}
    <div class="card border-0 shadow contact-form-card">
      <div class="card-body">
        <h2 class="text-center text-dark mt-4">Contact form</h2>
        <p class="text-center text-muted small">We are glad to hear from you <i class="far fa-smile-beam"></i></p>
        <p class="small text-danger d-block text-right">All fields are required</p>
        {{!-- Contact Form --}}
        <form id="contactForm" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="First Name & Last Name" name="name" minlength="8" autofocus required>
          </div>
          <div class="form-group">
            <input type="email" class="form-control email-input-class" placeholder="Your email address" name="email" required>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Your subject" name="subject" required>
            <small class="text-info">Short and descriptive as possible</small>
          </div>
          <div class="form-group">
            <textarea class="form-control" name="message" rows="10" placeholder="Any Suggestions or comments?" minlength="50" maxlength="500"
              required></textarea>
            <small id="suggestionCount" class="text-muted">Maximum 500 characters</small>
          </div>
          <div class="form-group">
            <div class="g-recaptcha" data-size="normal" data-callback="verify_recaptcha" data-sitekey="6Lf4wmwUAAAAACYVuIsbRzJUhc8CjzHeWJ0M56zc"></div>
            <script>
              function verify_recaptcha() {
                $('#sendBtn').prop("disabled", false);
                $('#sendBtn').css('cursor', 'default');
              }
            </script>
          </div>
          <div class="text-center">
            <button class="btn btn-outline-success btn-lg" type="submit" id="sendBtn" disabled><i class="far fa-paper-plane pr-2"></i>
              Send</button>
          </div>
        </form>
        {{!-- End of Contact Form --}}
      </div>
      {{!-- Envelope style --}}
      <div class="envelope"></div>
    </div>
  </div>
