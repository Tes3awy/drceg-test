{{!-- Back to /posts button --}}
<div class="back-to-posts text-right mb-5">
  <a class="btn btn-info" href="/posts">
    <i class="fas fa-chevron-left pr-2"></i> Back</a>
</div>
<div class="row">
  <div class="col-sm-8">
    <div class="post-container">
      <div class="post-title">
        <h2 class="mb-3">{{{post.title}}}</h2>
        {{!-- Post info --}}
        <div class="post-created text-right mb-3">
          <p class="text-right text-white mb-1">Published on {{getPrettyDate post.createdAt}}</p>
          <p class="text-info">
            {{#if post.updatedAt}}Last update: {{getPrettyDate post.updatedAt}}{{/if}}
          </p>
          {{#if author.name}}
            <p class="text-white mb-1"><span class="badge badge-pill badge-primary font-weight-normal py-1 px-2" style="line-height: 1.3;"
                title="Author">Written by: {{author.name}}</span></p>
          {{/if}}
        </div>
        {{!-- Social Media Shares --}}
        <div class="post-shares">
          <ul class="social-media-list">
            <li class="social-media-item">
              <a class="twitter-share-button" href="https://twitter.com/share?ref_src=twsrc%5Etfw" data-show-count="true"></a>
              <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </li>
            <li class="social-media-item">
              <div class="fb-share-button" data-href="http://localhost:3000/posts/{{post.id}}" data-layout="button_count" data-size="small"
                data-mobile-iframe="true">
                <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A3000%2Fposts%2Fpost%2F{{post.id}}&amp;src=sdkpreparse"
                  class="fb-xfbml-parse-ignore">Share</a>
              </div>
            </li>
            <li class="social-media-item">
              <script src="https://apis.google.com/js/platform.js" async defer></script>
              <div class="g-plus" data-action="share" data-annotation="bubble" data-href="http://localhost:3000/posts/{{post.id}}?key=AIzaSyCSInH_wRti3xy9Rwe7FBdZMjuFBajuukE"></div>
            </li>
            <li class="social-media-item">
              <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
              <script type="IN/Share" data-url="http://localhost:3000/posts/{{post.id}}"></script>
            </li>
          </ul>
        </div>
      </div>
      {{!-- Post content preview --}}
      <div class="post-body">
        <div class="post-image-container text-center my-3">
          <a href="/uploads/{{post.image}}" data-toggle="lightbox">
            <img class="img-fluid" src="/uploads/{{post.image}}" alt="{{post.title}}" title="{{post.title}}">
          </a>
        </div>
        <div class="post-body-content">
          {{{post.content}}}
        </div>
        {{#if post.postTag}}
        <i class="fas fa-tags" style="vertical-align: middle;" title="Tags"></i>
          {{#each post.postTag}}
            <a href="javascript:;" class="badge badge-primary px-2 py-1 font-weight-light" style="line-height: 1.2;" title="{{capitalize this}}">{{capitalize this}}</a>
          {{/each}}
        {{/if}}
        {{!-- Post actions if user exists --}}
        {{#if_eq post.userId user.id}}
          <div class="text-right mt-3">
            <div class="post-actions shadow">
              <a class="btn btn-warning text-white" href="/posts/edit/{{post.id}}">
                <i class="fas fa-marker pr-2"></i> Edit post</a>
            </div>
            <div class="post-actions shadow">
              <form id="deleteArticle" method="post" action="/posts/delete/{{post.id}}?_method=DELETE">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger"><i class="fas fa-backspace pr-2"></i> Delete post</a></button>
              </form>
            </div>
          </div>
        {{/if_eq}}
        <hr>{{!-- Comments section --}}
        <h2>Comments</h2>
        <hr class="bg-primary" style="max-width: 12%; margin-left: 0;">
        <section class="mb-3" id="disqus_thread"></section>
        {{!-- Disqus --}}
        <script>
          var disqus_config = function () {
            this.page.url = window.location.href; // Replace PAGE_URL with your page's canonical URL variable
            this.page.identifier = window.location.href.substr(window.location.href.lastIndexOf('/') + 1); // Replace PAGE_IDENTIFIER with your page's unique identifier variable
          };
          (function () { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://tes9.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
          })();
        </script>
        <noscript>Please enable JavaScript to view the
          <a href="https://disqus.com/?ref_noscript">comments powered by
            <a href="https://disqus.com/" target="_blank">Disqus</a>.</a>
        </noscript>
      </div>
    </div>
  </div>
