<h2 class="mb-3">Add tag</h2>
<div class="row">
    <div class="col-sm-6">
        <form action="/tag/add" method="POST">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        {{#if success}}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <span>{{success}}</span>
                                <button type="button" class="close" data-dismiss="alert">
                                    <span>&times;</span>
                                </button>
                            </div>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <input type="text" name="tagName" class="form-control" placeholder="Enter Tag name" required>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle pr-2"></i> Add tag</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6">
        <div class="table-responsive-md">
            <table class="table table-bordered no-wrap table-light text-dark" id="dataTable">
                <thead>
                    <tr>
                        <th scope="col">Tag</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if tag}}
                        {{#each tag}}
                            <tr scope="row">
                                <td>{{this.tag}}</td>
                            </tr>
                        {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>