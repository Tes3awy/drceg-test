<div class="text-right mb-4">
  <a href="/posts/add" class="btn btn-info"><i class="fa fa-chevron-left pr-2"></i> Go Back</a>
</div>
<div class="row">
  <div class="col-sm-6">
    <form method="POST" role="form">
      <fieldset>
        <div class="row">
          <div class="col-sm-6 mx-auto">
            <h2 class="mb-3">Add tag</h2>
            <div class="form-group">
              {{!-- Error Handling --}}
              {{#if error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  <span><i class="fas fa-exclamation-triangle pr-1"></i> {{error}}</span>
                  <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                  </button>
                </div>
              {{/if}}
              {{!-- Success Message --}}
              {{#if success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <span><i class="far fa-thumbs-up pr-1"></i> {{success}}</span>
                  <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                  </button>
                </div>
              {{/if}}
            </div>
            <div class="form-group">
              <input type="text" name="tagName" class="form-control" placeholder="Enter Tag name" required autofocus>
            </div>
            <div class="text-right">
              <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle pr-2"></i> Add tag</button>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="col-sm-6">
    <div class="table-responsive-md">
      <table class="table table-bordered table-striped no-wrap table-light text-dark" id="dataTable">
        <thead>
          <tr>
            <th scope="col">Tags</th>
          </tr>
        </thead>
        <tbody>
          {{#if tag}}
            {{#each tag}}
              <tr scope="row">
                <td>{{capitalize this.tag}}</td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
